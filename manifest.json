{
  "manifest_version": 3,
  "name": "LeetStreak",
  "version": "1.0",
  "description": "Track and verify your LeetCode daily challenge streak on Discord",
  "permissions": ["storage", "tabs", "webNavigation", "cookies"],
  "host_permissions": ["https://leetcode.com/*"],
  "icons": {
    "16": "icons/logo16.png",
    "32": "icons/logo32.png",
    "48": "icons/logo48.png",
    "128": "icons/logo128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "32": "icons/logo32.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.js", "options.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
